<h1><%= @artist.name %></h1>

<h3>Discography</h3>
<% @songs.each do |song| %>
  <div class="panel panel-default">
    <div class="panel-heading preview">
      <%= song.title %>
    </div>
    <div class="panel-body">
      <%= link_to "Delete Song", [song.artist, song], class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading preview">
    Actions
  </div>
  <div class="panel-body">
    <%= form_for([@artist, @artist.songs.create]) do |f| %>
      <p><%= f.text_field :title %></p>
      <p><%= f.submit %></p>
    <% end %>

    <%= link_to "Delete Artist", artist_path(@artist), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>
